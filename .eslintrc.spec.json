{
  "root": true,
  "env": {
    "browser": true,
    "jasmine": true,
    "jquery": true
  },
  "plugins": [
    "jasmine"
  ],
  "extends": "plugin:jasmine/recommended",
  "globals": {
    "angular": false,
    "inject": false,
    "sinon": false,
    "_": false
  },
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module"
  },
  "rules": {
    "no-bitwise": 2,
    "camelcase": 2,
    "curly": 2,
    "eqeqeq": 2,
    "wrap-iife": [
      2,
      "any"
    ],
    "no-use-before-define": [
      2,
      {
        "functions": false
      }
    ],
    "new-cap": 2,
    "no-caller": 2,
    "quotes": [
      2,
      "single",
      { "allowTemplateLiterals": true }
    ],
    "no-undef": 2,
    "no-unused-vars": 2,
    "strict": [
      2,
      "global"
    ],
    "dot-notation": 0,
    "jasmine/missing-expect": [
      1,
      "expect()",
      "$httpBackend.expect()",
      "$httpBackend.expectDELETE()",
      "$httpBackend.expectGET()",
      "$httpBackend.expectJSONP()",
      "$httpBackend.expectHEAD()",
      "$httpBackend.expectPATCH()",
      "$httpBackend.expectPOST()",
      "$httpBackend.expectPUT()"
    ],
    "jasmine/valid-expect": 2
  }
}
